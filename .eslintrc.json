{
    "env": {
        "browser": true,
        "es2021": true
    },

    "extends": [
        "airbnb",
        "prettier",
        "eslint:recommended",
        "stylelint-config-prettier"
      //  "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "lint",
        "prettier",
        "@typescript-eslint/recommended"
    ],
    "rules": {
        "prettier": true,
        "prettier/prettier": "error",
        "semi": ["error", "always"],
        "quotes": "off"
    }
}
